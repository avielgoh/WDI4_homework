<header class="header-bar">
  <a href="/"> <img src="../logo.png" alt="" id="logo"/> </a>
  <div class="search-bar">
    <form class="form" action="/search" method="post" autocomplete="off">
      <span class="input-logo"><i class="fa fa-search"></i></span>
      <input class="input-bar" type="text" name="name" placeholder="Search by title" required="required">
    </form>
  </div>
</header>


<table class="search-table" align="center" cellspacing="0px">
  <caption> <h2>Results for '<%= @name.gsub('+', ' ') %>'</h2> </caption>

  <% @movie_info['Search'].each do |movie| %>
    <tr class="search-results">
      <td class="search-poster">
        <a href="/movie/<%= movie['imdbID']%>"><img id="search-thumbnail" src="<%= movie['Poster'] %>" alt="" /></a>
      </td>

      <td class="search-title">
        <p>
          <a href="/movie/<%= movie['imdbID']%>"><%= movie['Title'] %></a> (<%= movie['Year'] %>)
        </p>
      </td>
    </tr>
  <% end %>

</table>
