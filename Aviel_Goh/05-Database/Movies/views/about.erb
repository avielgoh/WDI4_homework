<header class="header-bar">
  <a href="/"> <img src="/logo.png" alt="" id="logo"/> </a>
  <div class="search-bar">
    <form class="form" action="/search" method="post" autocomplete="off">
      <span class="input-logo"><i class="fa fa-search"></i></span>
      <input class="input-bar" type="text" name="name" placeholder="Search by title" required="required">
    </form>
  </div>
  <a href="/history" id="history"> History </a>
</header>



<table class="result-table" align="center" cellspacing="0px">

  <tr>
    <td class="result-poster">
      <img id="description-thumbnail" src="<%= @poster %>" alt="" />
    </td>

    <td class="result-description">
      <div id="title"><%= @title %></div>
      <div id="year">(<%= @year %>)</div>
      <div id="info"><%= @rated%> | <%= @runtime %> | <%= @genre %> | <%= @released %></div>
      <div id="rating"><span class="about-descriptors">IMDb Rating: </span> <%= @imdbrating %></div>
      <div class="people"><span class="about-descriptors">Plot: </span> <%= @plot %></div>
      <div class="people"><span class="about-descriptors">Director: </span> <%= @director %></div>
      <div class="people"><span class="about-descriptors">Writers: </span> <%= @writer %></div>
      <div class="people"><span class="about-descriptors">Actors:</span> <%= @actors %></div>
    </td>
  </tr>


</table>
