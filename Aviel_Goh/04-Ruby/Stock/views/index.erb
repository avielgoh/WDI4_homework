<div class="search-box">
  <form class="" action="/stock" method="get" autocomplete="off">
    <input type="text" name="ticker" placeholder="Search by ticker">
    <button type="button" name="find-button"><i class="fa fa-search"></i></button>
  </form>
</div>


<div class="price">
  <div id="ticker"><%= @ticker%></div>
  <div id="price"><%= @price%></div>
  <div id="change"><%= @price_change%></div>
  <div id="change"><%= @percentage_change_display%></div>
</div>


<h3><%= @tablename%></h3>

<table class="table" align="center" cellspacing="0px">
  <tr>
    <td class="keys">OPEN</td>
    <td class="values values_mid"> <%= @open%> </td>
    <td class="keys keys_mid">MKT CAP</td>
    <td class="values"> <%= @market_cap%> </td>
  </tr>
  <tr>
    <td class="keys">HIGH</td>
    <td class="values values_mid"> <%= @high%> </td>
    <td class="keys keys_mid">52W HIGH</td>
    <td class="values"> <%= @w52_high%> </td>
  </tr>
  <tr>
    <td class="keys">LOW</td>
    <td class="values values_mid"> <%= @low%> </td>
    <td class="keys keys_mid">52W LOW</td>
    <td class="values"> <%= @w52_low%> </td>
  </tr>
  <tr>
    <td class="keys">VOL</td>
    <td class="values values_mid"> <%= @volume%> </td>
    <td class="keys keys_mid">AVG VOL</td>
    <td class="values"> <%= @average_volume%> </td>
  </tr>
  <tr>
    <td class="keys">P/E</td>
    <td class="values values_mid"> <%= @pe%> </td>
    <td class="keys keys_mid">YIELD</td>
    <td class="values"> <%= @yield%> </td>
  </tr>
  <tr class="bottom-line">
    <td class="keys bottom-line">EBITDA</td>
    <td class="values values_mid bottom-line"> <%= @ebitda%> </td>
    <td class="keys keys_mid bottom-line">EPS</td>
    <td class="values bottom-line"> <%= @eps%> </td>
  </tr>
</table>
